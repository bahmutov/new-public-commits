{
  "name": "new-public-commits",
  "description": "Returns list of commits since last tag with types relevant to users: major, minor, etc",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/new-public-commits/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/new-public-commits#readme",
  "keywords": [
    "commit",
    "git",
    "npm",
    "semantic-release",
    "semver",
    "util"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/new-public-commits.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "pretty": "prettier-standard 'src/*.js'",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && npm run demo && semantic-release post",
    "demo": "node -e 'require(\".\").newPublicCommits().then(console.log, console.error)'"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "github-post-release": "1.12.1",
    "license-checker": "13.0.2",
    "mocha": "3.4.2",
    "next-update-travis": "1.5.3",
    "nsp": "2.7.0",
    "pre-git": "3.15.0",
    "prettier-standard": "6.0.0",
    "semantic-release": "^6.3.6",
    "snap-shot": "2.17.0",
    "standard": "10.0.2"
  },
  "dependencies": {
    "check-more-types": "2.24.0",
    "debug": "2.6.8",
    "ggit": "1.23.1",
    "lazy-ass": "1.6.0",
    "pluralize": "6.0.0",
    "simple-commit-message": "3.3.0"
  },
  "release": {
    "generateNotes": "github-post-release",
    "analyzeCommits": "simple-commit-message"
  }
}
